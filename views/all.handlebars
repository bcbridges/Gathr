<body class='search'>
  <section
    class='hero is-small is-success is-flex is-justify-content-center is-align-items-center'
  >
    <div class='hero-body has-text-centered'>
      <p class='title'>Use keywords to find events</p>

      <!--Search Bar-->
      <div class='searchbar'>
        <input
          class='input is-normal'
          type='text'
          placeholder='Search Keywords'
          name="search"
        />
      </div>


<!-- For each render each card that is returned from the API search -->
<main>
{{#each events as |event|}}
{{> event-details}}
{{/each}}
</main>
  </section>
</body>