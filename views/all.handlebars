<body class="search">
  <section
    class="hero is-small is-success is-flex is-justify-content-center is-align-items-center"
  >
    <div class="hero-body has-text-centered py-4">
        
          <p class="title mr-4 mb-0">Use keywords to find events:   </p>
        <div class="dropdown is-hoverable">

          <div class="dropdown-trigger">
            <button
              class="button searchButton"
              aria-haspopup="true"
              aria-controls="dropdown-menu "
            >
              <span class="event-selected">Select an Event Type</span>
              <span class="icon is-small">
                <i class="fas fa-angle-down" aria-hidden="true"></i>
              </span>
            </button>
          </div>
          <div
            class="dropdown-menu has-text-left"
            id="dropdown-menu"
            role="menu"
          >
            <!-- Links with all of the available state selections -->
            <div class="dropdown-content" name="tags">
              <a href="../search/Coffee" class="dropdown-item">Coffee</a>
              <a href="../search/Food" class="dropdown-item">Food</a
              ><a href="../search/Running" class="dropdown-item">Running</a
              ><a href="../search/Tennis" class="dropdown-item">Tennis</a
              ><a href="../search/Workout" class="dropdown-item">Workout</a
              ><a href="../search/Football" class="dropdown-item">Football</a
              ><a href="../search/Games" class="dropdown-item">Board Games</a>
              <a href="../search/Skiing" class="dropdown-item">Skiing</a>
              <a href="../search/Rollerblading" class="dropdown-item">Rollerblading</a
              ><a href="../search/Tech" class="dropdown-item">Tech</a
              ><a href="../search/Networking" class="dropdown-item">Networking</a
              ><a href="../search/Community Service" class="dropdown-item">Service</a
              ><a href="../search/Community Events" 
              ><a href="../search/Tutoring" class="dropdown-item">Tutoring</a
              ><a href="../search/Reading" class="dropdown-item">Reading</a
              ><a href="../search/Movies & Entertainment" class="dropdown-item">Movies</a
              ><a href="../search/Music" class="dropdown-item">Music</a
              ><a href="../search/Hiking" class="dropdown-item">Hiking</a>
            </div>
          </div>
        </div>
      </div>
    <button class="button mb-4 is-warning normal" name="newEvent">OR Create a new event</button>
  </section>
    <!-- For each render each card that is returned from the API search -->
    <main>

<div
  class="columns is-multiline is-half-tablet is-one-third-desktop is-one-quarter-widescreen is-justify-content-space-around"
>
      {{#each events as |event|}}
      {{> all-event-details}}
      {{/each}}
</div>
    </main>
  
</body>
