<body class="newevent">
  <section>
    <div
      class="columns is-gapless m-0 is-variable is-2 cardContainer is-multiline is-centered"
    >
      <!--Login Section-->
      <div
        class="column is-half-tablet is-one-third-desktop is-one-third-widescreen"
      >
        <div class="card">
          <div class="box">
            <div class="field">
              <label class="label">Event Name</label>
              <div class="control">
                <input
                  class="input event_title"
                  type="text"
                  placeholder="Event Name"
                />
              </div>
            </div>

            <div class="field">
              <label class="label">Date & Time</label>
              <div class="control">
                Start
                <input
                  class="input time_start"
                  type="datetime-local"
                  placeholder="Start Time"
                />
                End
                <input
                  class="input time_end"
                  type="datetime-local"
                  placeholder="End Time"
                />

              </div>
            </div>

            <div class="field">
              <label class="label">Location</label>
              <div class="control">
                <input
                  class="input address_1"
                  type="text"
                  placeholder="Address Line 1"
                />
                <input
                  class="input address_2"
                  type="text"
                  placeholder="Address Line 2"
                />
              </div>
            </div>

            <div class="field">
              <label class="label">Description</label>
              <div class="control">
                <textarea
                  class="textarea description"
                  placeholder="Textarea"
                ></textarea>
              </div>
            </div>

            <div class="field">
              <label class="label">Event Tag</label>
              <div class="control">
                <select name="tags" id="tags">
                  {{#each tags as |tag|}}
                  {{> event-tags}}
                  {{/each}}
                </select>
              </div>
            </div>

            <div class="field is-grouped">
              <div class="control">
                <button
                  class="button is-success"
                  name="submitbtn"
                >Submit</button>
              </div>
              <div class="control">
                <button class="button is-link" name="cancelbtn">Cancel</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>